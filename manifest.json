{
    "name": "Cleat Street Extension",
    "version": "1.0.0",
    "description": "Improvements on the Cleat Street App",
    "manifest_version": 3,
    "author": "David Arico",
    "action": {
        "default_popup": "pages/index.html",
        "default_title": "Cleat Street Extension",
        "default_icon": "assets/icon.png"
    },
    "content_scripts": [
        {
          "matches": ["https://www.cleatstreet.app/*"],
          "js": [
            "scripts/setBook.js",
            "scripts/colorBlind.js",
            "scripts/darkMode.js", 
            "scripts/highlightBets.js",
            "scripts/options.js",
            "scripts/autoRefresh.js",
            "scripts/content.js"
          ],
          "css": [
            "custom.css"
          ]
        }
    ],
    "host_permissions": [
        "https://www.cleatstreet.app/*"
    ],
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage",
        "scripting"
    ],
    "icons": {
        "48": "assets/icon.png"
    },
    "web_accessible_resources": [
      {
        "resources": [ 
          "assets/icon.png",
          "assets/bing_bong.mp3"
        ],
        "matches": [ "https://www.cleatstreet.app/*" ]
      }
    ]
}